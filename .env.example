# ===================================
# LibreBird Environment Configuration
# ===================================

# Node Environment
NODE_ENV=development

# ===================================
# Gateway Service Configuration
# ===================================

# Server Configuration
GATEWAY_PORT=3000
GATEWAY_HOST=0.0.0.0
GATEWAY_WS_PATH=/ws

# JWT Authentication
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION=7d
JWT_REFRESH_EXPIRATION=30d

# OAuth Configuration (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/auth/google/callback

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3000/auth/github/callback

# Session Management
SESSION_SECRET=another-secret-key-change-in-production

# ===================================
# Redis Configuration
# ===================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SESSION_TTL=604800

# ===================================
# PostgreSQL Configuration
# ===================================

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=librebird
POSTGRES_USER=librebird
POSTGRES_PASSWORD=change-me-in-production

# Database Connection Pool
POSTGRES_POOL_MIN=2
POSTGRES_POOL_MAX=10

# Database URL (alternative to individual settings)
# DATABASE_URL=postgresql://librebird:password@localhost:5432/librebird

# ===================================
# Brain Service Configuration
# ===================================

BRAIN_GRPC_HOST=localhost
BRAIN_GRPC_PORT=50051

# Default LLM Provider
DEFAULT_LLM_PROVIDER=local
DEFAULT_LLM_MODEL=llama-3-8b

# Local Model Configuration
LOCAL_MODEL_PATH=./models/llama-3-8b.gguf
LOCAL_MODEL_N_CTX=4096
LOCAL_MODEL_N_GPU_LAYERS=35

# OpenAI Configuration
OPENAI_API_KEY=
OPENAI_ORG_ID=
OPENAI_DEFAULT_MODEL=gpt-4-turbo-preview

# Anthropic Configuration
ANTHROPIC_API_KEY=
ANTHROPIC_DEFAULT_MODEL=claude-3-opus-20240229

# Google Gemini Configuration
GOOGLE_API_KEY=
GOOGLE_DEFAULT_MODEL=gemini-pro

# Vector Memory Configuration
EMBEDDINGS_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDINGS_DIMENSION=384
VECTOR_SEARCH_LIMIT=10

# ===================================
# Hands Service Configuration
# ===================================

HANDS_GRPC_HOST=localhost
HANDS_GRPC_PORT=50052

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock
SANDBOX_IMAGE=librebird/sandbox:latest

# Sandbox Resource Limits
SANDBOX_DEFAULT_TIMEOUT=30
SANDBOX_DEFAULT_MEMORY_MB=512
SANDBOX_DEFAULT_CPU_LIMIT=1.0
SANDBOX_MAX_CONCURRENT=10

# Network and Security
SANDBOX_NETWORK_ENABLED=false
SANDBOX_FILESYSTEM_READ=false
SANDBOX_FILESYSTEM_WRITE=false

# ===================================
# Logging Configuration
# ===================================

LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs

# ===================================
# Monitoring Configuration
# ===================================

# Prometheus Metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Sentry Error Tracking (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ===================================
# Feature Flags
# ===================================

ENABLE_OAUTH=false
ENABLE_MAGIC_LINK=false
ENABLE_VECTOR_MEMORY=true
ENABLE_MULTI_USER=true
ENABLE_WORKSPACE_ISOLATION=true
ENABLE_AUDIT_LOGGING=true

# ===================================
# Email Configuration (for invites)
# ===================================

SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@librebird.ai

# ===================================
# Development Configuration
# ===================================

# Enable hot reload
HOT_RELOAD=true

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Debug Mode
DEBUG=false
