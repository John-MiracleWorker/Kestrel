{
  "name": "librebird",
  "version": "0.1.0",
  "private": true,
  "description": "Personal AI agent platform with Gateway/Brain/Hands architecture",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install",
    "build": "npm run build --workspaces --if-present",
    "test": "npm test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "rm -rf packages/*/node_modules packages/*/dist node_modules",
    "proto:compile": "npm run proto:compile --workspace=@librebird/shared"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/librebird"
  },
  "keywords": [
    "ai",
    "agent",
    "llm",
    "personal-assistant",
    "automation"
  ],
  "author": "",
  "license": "MIT"
}
